{
    "name": "example-app",
    "repositories": [
        {
            "type": "vcs", 
            "url": "https://github.com/takeshix/TwigView"
        }
    ], 
    "require": {
        "php": ">=5.2.8",
        "ext-mcrypt": "*", 
        "cakephp/cakephp": "2.6.*",
        "takeshix/twig-view": "dev-develop",
        "slywalker/boost_cake": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "cakephp/debug_kit" : "2.2.*"
    }, 
    "extra": {
        "installer-paths": {
            "app/Plugin/{$name}": ["type:cakephp-plugin"]
        }
    }, 
    "config": {
        "vendor-dir": "Vendor/"
    }
}
